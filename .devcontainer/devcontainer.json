{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "installZsh": "true",
            "username": "vscode",
            "uid": "1000",
            "gid": "1000",
            "upgradePackages": "true"
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],

    // Use 'onCreateCommand' to run commands on the host machine before the container is created.
    // Use 'updateContentCommand' to run commands that finalize container setup when a dev container is created.
    // Use 'postCreateCommand' to run commands after the container is created.
    "updateContentCommand": "cd /workspaces/racketeer/.devcontainer/ && chmod +x updateContent.sh && ./updateContent.sh && cd /workspaces/racketeer/",

    // Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "vscode",

    "extensions": [
        "ms-azuretools.vscode-docker",
        "evzen-wybitul.magic-racket"
    ],

    "settings": {
        "files.associations": {
            "*.pp": "racket",
            "*.pm": "racket",
            "*.pmd": "racket"
          }
    }
}
